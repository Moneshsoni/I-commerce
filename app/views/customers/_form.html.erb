<%= form_with model: customer do |form| %>
  <div>
    <%= form.label :name %><br>
    
    <%= form.text_field :name %>
    <br>
    <% customer.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
    <br>
  </div>

  <div>
    <%= form.label :surname %><br>
    <%= form.text_field :surname %><br>
    <br>
    <% customer.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

    <div>
        <%= form.label :email %><br>
        <%= form.email_field :email %><br>
        <br>
        <% customer.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
        <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
