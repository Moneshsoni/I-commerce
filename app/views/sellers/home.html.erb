<center><h1>Product List</h1><center>

    <table>
      
    <thead>
    <tr> 
        <th>Name</th>
        <th>Category</th>
        <th>Price </th>
        <th>Available </th>
        <%# <th colspan = "5">Actions</th> %>
        
    </tr>
    </thead>
    <tbody>
        <%@products.each do |product|%>

        <tr>
            <td><%= product.name%></td>
            <td><%= product.category %></td>
            <td><%= product.price%></td>
            <td><%= yes_or_no(product.available) %></td>
            

        </tr>
        <%end%>

    </tbody>

    </table>


